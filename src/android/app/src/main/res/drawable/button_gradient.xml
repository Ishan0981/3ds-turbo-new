<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="45" android:centerColor="@color/citra_orange" android:centerX="40%" android:endColor="@color/citra_orange" android:startColor="@color/citra_orange" android:type="linear" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_check" android:gravity="center"></item>
        </layer-list>
    </item>
    <item>
        <ripple android:color="#d3d3d3">
            <item>
                <shape>
                    <gradient android:angle="45" android:centerColor="@color/citra_orange" android:centerX="40%" android:endColor="@color/citra_orange" android:startColor="@color/citra_orange" android:type="linear" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>